    <script>
       const sleep = (ms) => new Promise((r) => setTimeout(r, ms));

      const $root = document.documentElement;
      const ms = (v) => parseInt(getComputedStyle($root).getPropertyValue(v));

      const el = document.getElementById("typewriter");
      const out = el.querySelector(".text");

      /** Gather phrases from data attribute */
      let phrases;
      try {
        phrases = JSON.parse(el.getAttribute("data-phrases"));
      } catch (e) {
        phrases = ["Add phrases via data-phrases JSON array."]; // fallback
      }

      // Controls
      let paused = false;
      let skipRequested = false;

      document
        .getElementById("pauseBtn")
        .addEventListener("click", () => (paused = true));
      document
        .getElementById("resumeBtn")
        .addEventListener("click", () => (paused = false));
      document
        .getElementById("skipBtn")
        .addEventListener("click", () => (skipRequested = true));

      const waitUntilResumed = async () => {
        while (paused) {
          await sleep(100);
        }
      };

      const type = async (text) => {
        for (let i = 0; i <= text.length; i++) {
          await waitUntilResumed();
          if (skipRequested) break;
          out.textContent = text.slice(0, i);
          await sleep(ms("--type-speed"));
        }
      };

      const erase = async () => {
        const text = out.textContent;
        for (let i = text.length; i >= 0; i--) {
          await waitUntilResumed();
          if (skipRequested) break;
          out.textContent = text.slice(0, i);
          await sleep(ms("--erase-speed"));
        }
      };

      const loop = async () => {
        let i = 0;
        while (true) {
          const phrase = phrases[i % phrases.length];
          skipRequested = false;
          await type(phrase);
          if (!skipRequested) await sleep(ms("--hold-time"));
          await erase();
          i++;
        }
      };

      // Kick off once DOM is ready
      window.addEventListener("DOMContentLoaded", loop);
      (function () {
        emailjs.init("zwfqVHbfYcwAEsxlY"); // üîπ Replace with your EmailJS Public Key
      })();

      // Handle form submission
      document
        .getElementById("contact-form")
        .addEventListener("submit", function (e) {
          e.preventDefault();

          emailjs.sendForm("service_3kks5tw", "template_t0237td", this).then(
            function () {
              alert("‚úÖ Message sent successfully!");
            },
            function (error) {
              alert("‚ùå Failed to send message: " + JSON.stringify(error));
            }
          );
        });
    </script>
